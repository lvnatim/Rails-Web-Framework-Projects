<%= form_for @movie do |f| %>
  <div>
    <% if @movie.errors.any? %>
      <div>
        <%= pluralize(@movie.errors.count, "error") %> prevented this movie from submitted:
        <ul>
          <%= @movie.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="form-field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-field">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </div>
  <div class="form-field">
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>
  <div class="form-field">
    <%= f.label :runtime_in_minutes %><br>
    <%= f.number_field :runtime_in_minutes %>
  </div>
  <div class="form-field">
    <%= f.label :poster_image_url %><br>
    <%= f.text_field :poster_image_url %>
  </div>
  <div class="form-field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="form-field">
    <%= f.label :poster %><br>
    <%= f.file_field :poster %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
  <%= link_to "I changed my mind, I don't want to submit anything", movies_path %>

<% end %>