<h2>Admin User Management (<%= link_to "Add user", new_admin_user_path %>) </h2>

<% @users.each do |user| %>
  <p><b>ID</b>: <%= user.id %> |
  <b>Full Name</b>: <%= user.full_name %> |
  <b>Email</b>: <%= user.email %> |
  <b>Created At</b>: <%= user.created_at %> |
  <b>Updated At</b>: <%= user.updated_at %> |
  (<%= link_to "View as", spoof_path(user) %> |
  <%= link_to "profile", user_path(user) %> |
  <%= link_to "edit", edit_admin_user_path(user) %> |
  <%= link_to "delete", admin_user_path(user), method: :delete, data: {confirm: "You sure?"} %>)</p>
<% end %>

<%= paginate @users %>
<hr>