<h2>Edit this post!</h2>

<%= form_for @post do |f| %>
  <div class="form-field">
    <%= f.label "title" %>
    <%= f.text_field "title" %>
  </div>
  <div class="form-field">
    <%= f.label "author" %>
    <%= f.text_field "author" %>
  </div>
  <div class="form-field">
    <%= f.label "text" %>
    <%= f.text_area "text" %>
  </div>
  <div class="form-field">
    <%= f.submit "Save" %>
  </div>
<% end %>

<%= link_to 'Back to this post', post_path(@post) %>